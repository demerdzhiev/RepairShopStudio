@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class=" display-4" >Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        Here you can <b>create</b>, <b>edit</b>,
        <b>delete</b> and <b>view details </b> of parts, services etc... .
        @*<br />You can <b>rent</b> and <b>leave</b> the free ones, too!*@
    </p>
    <p class="lead mt-1">
        You can also <b>control the profiles of all employees </b> in the system.
    </p>
    <hr class="my-4">
    <p>
        <a asp-area="" asp-controller="User" asp-action="Index" class="btn btn-primary btn-lg">All Employees</a>
        <a asp-area="" asp-controller="User" asp-action="Register" class="btn btn-primary btn-lg">Add new employee</a>
        <span>  |   </span>
        <a asp-area="" asp-controller="Parts" asp-action="Add" class="btn btn-primary btn-lg">Add new part</a>
        <a asp-area="" asp-controller="Parts" asp-action="All" class="btn btn-primary btn-lg">See all parts</a>
        <span>  |   </span>
        <a asp-area="" asp-controller="ShopServices" asp-action="Add" class="btn btn-primary btn-lg">Add new service</a>
        <a asp-area="" asp-controller="ShopServices" asp-action="All" class="btn btn-primary btn-lg">See all services</a>
    </p>
    <p>
        <a asp-area="" asp-controller="Customers" asp-action="All" class="btn btn-primary btn-lg">All Customers</a>
        <a asp-area="" asp-controller="Customers" asp-action="AddRegular" class="btn btn-primary btn-lg">Add regular customer</a>
        <a asp-area="" asp-controller="Customers" asp-action="AddCorporate" class="btn btn-primary btn-lg">Add corporate customer</a>
    </p>


</div>

<div class="mb-5"></div>

<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics-button">Show Statistics</button>
    </div>
</div>
<div class="mt-4 p-5 bg-light d-none" id="statistics">
    <div class="row">
        <h2 class="col-md-4 text-center" id="total-parts"></h2>
        <h2 class="col-md-4 text-center" id="total-services"></h2>
    </div>
</div>
@section Scripts {
    <script>
        $('#statistics-button').on('click', ev => {
            $.get('api/statistics', (data) => {
                $('#total-parts').text(data.totalParts + "parts");
                $('#total-services').text(data.totalServices + " services");
                $('#statistics').removeClass('d-none');
                $('#statistics-button').hide();
            });
        });
    </script>
}