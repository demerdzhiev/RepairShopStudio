@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class=" display-4" >Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        Here you can <b>create</b>, <b>edit</b>,
        <b>delete</b> and <b>view details </b> of parts, services etc... .
        @*<br />You can <b>rent</b> and <b>leave</b> the free ones, too!*@
    </p>
    <p class="lead mt-1">
        You can also <b>control the profiles of all employees </b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="User" asp-action="Index" class="btn btn-primary btn-lg">All Employees</a>
    <a asp-area="" asp-controller="User" asp-action="Register" class="btn btn-primary btn-lg">Add new employee</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="Parts" asp-action="Add" class="btn btn-primary btn-lg">Add new part</a>
    <a asp-area="" asp-controller="Parts" asp-action="All" class="btn btn-primary btn-lg">See all parts</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="ShopServices" asp-action="Add" class="btn btn-primary btn-lg">Add new service</a>
</div>
