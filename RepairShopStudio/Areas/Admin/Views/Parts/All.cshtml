@model IEnumerable<PartViewModel>

@{
    ViewBag.Title = "Parts in storage";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var part in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" style="width: 12rem;"
             src="@part.ImageUrl" alt="Part Image">
            <div class="card-body">
                <h5 class="card-title mt-1">@part.Name</h5>
                <p class="mb-0"><b>Availability:</b> @part.Stock</p>
                <p class="mb-0"><b>Manufacturer:</b> @part.Manufacturer</p>
                <p class="mb-0"><b>Original MPN:</b> @part.OriginalMpn</p>
                <p class="mb-0"><b>Description:</b> @part.Description</p>
                <p class="mb-0"><b>Price to sell:</b> @String.Format("{0:f2}", @part.PriceSell)</p>
                <p class="mb-0"><b>Price to buy:</b> @String.Format("{0:f2}", @part.PriceBuy)</p>
                <p><b>Vehicle component:</b> @part.VehicleComponent</p>
            </div>
            <div class="form-inline">
                @if (User.IsInRole(RoleConstants.Administrator))
                {
                    <a asp-controller="Parts" asp-action="Edit" asp-route-Id="@part.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-controller="Parts" method="post"> 
                        <input name="id" type="hidden" value="@part.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        </div>
    }
</div>