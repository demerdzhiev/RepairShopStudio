@model IEnumerable<OperatingCardViewModel>

@{
    ViewBag.Title = "Parts in storage";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var card in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title mt-1">@card.DocumentNumber</h5>
                <p class="mb-0"><b>Vehicle license plate:</b> @card.VehicleLicensePlate</p>
                <p class="mb-0"><b>Customer:</b> @card.CustomerName</p>
                <p class="mb-0"><b>Mechanic:</b> @card.MechanicName</p>
                <p class="mb-0"><b>Parts used:</b> 
                    @foreach (var item in card.Parts)
                    {
                        @item.Name
                    }</p>
                <p class="mb-0">
                    <b>Services applied:</b>
                    @foreach (var item in card.Services)
                    {
                        @item.Name
                    }
                </p>
                <p class="mb-0"><b>Discount:</b> @String.Format("{0:f2}", @card.Discount)</p>
                <p class="mb-0"><b>Total amuont:</b> @String.Format("{0:f2}", @card.TotalAmount)</p>
                <p><b>Date of creation:</b> @card.IssueDate</p>
                <p class="mb-0"><b>Is finished:</b> @(card.IsActive ? "❌" : "✔")</p>
            </div>
            @*<div class="form-inline">
                @if (User.IsInRole(RoleConstants.Administrator))
                {
                    <a asp-controller="Parts" asp-action="Edit" asp-route-Id="@part.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-controller="Parts" method="post">
                        <input name="id" type="hidden" value="@part.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>*@
        </div>
    }
</div>