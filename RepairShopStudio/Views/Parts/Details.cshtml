@model PartDetailsModel

@{
    ViewBag.Title = "Part Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImageUrl" alt="House Image">
        </div>
        <div class="card col-8 border-0">
            <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                <input type="hidden" asp-for="@Model.Id" />
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Part name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Stock" class="form-label">Availability</label>
                    <input asp-for="@Model.Stock" class="form-control" aria-required="true" readonly />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" readonly />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Manufacturer" class="form-label">Manufacturer name</label>
                    <input asp-for="@Model.Manufacturer" class="form-control" value="" readonly />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.OriginalMpn" class="form-label">Original Mpn</label>
                    <input asp-for="@Model.OriginalMpn" class="form-control" value="" readonly />
                    <span asp-validation-for="OriginalMpn" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description / Notes</label>
                    <input asp-for="@Model.Description" class="form-control" value="" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PriceSell" class="form-label">Price to sell</label>
                    <input asp-for="@Model.PriceSell" class="form-control" value="" readonly />
                    <span asp-validation-for="PriceSell" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PriceBuy" class="form-label">Price to buy from supplier</label>
                    <input asp-for="@Model.PriceBuy" class="form-control" value="" readonly />
                    <span asp-validation-for="PriceBuy" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.VehicleComponentId" class="form-label">Vehicle component</label>
                    <input asp-for="@Model.VehicleComponent" class="form-control" value="" readonly />
                    <span asp-validation-for="VehicleComponentId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <a asp-controller="Parts" asp-action="All" class="btn btn-success">Done</a>
                    <a asp-controller="Parts" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-warning">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}