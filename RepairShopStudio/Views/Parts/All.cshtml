@model IEnumerable<PartViewModel>

@{
    ViewBag.Title = "Parts in storage";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var part in Model)
    {
        <div class="card col-4" style="width: 14rem;">
            <img class="card-img-top" style="width: 12rem;"
             src="@part.ImageUrl" alt="Part Image">
            <div class="card-body">
                <h5 class="card-title mt-1">@part.Name</h5>
                <p class="mb-0">Availability: @part.Stock</p>
                <p class="mb-0">Manufacturer: @part.Manufacturer</p>
                <p class="mb-0">Original MPN: @part.OriginalMpn</p>
                <p class="mb-0">Description: @part.Description</p>
                <p class="mb-0">Price to sell: @part.PriceSell</p>
                <p class="mb-0">Price to buy: @part.PriceBuy</p>
                <p>Vehicle component: @part.VehicleComponent</p>
            </div>
            <div class="form-inline">
                @if (User.IsInRole(RoleConstants.Administrator))
                {
                    @*<a asp-controller="Parts" asp-action="ViewDetails" asp-route-Id="@part.Id" class="btn btn-success">Details</a>*@
                    <a asp-controller="Parts" asp-action="Edit" asp-route-Id="@part.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-controller="Parts" method="post"> 
                        <input name="id" type="hidden" value="@part.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        </div>
    }
</div>