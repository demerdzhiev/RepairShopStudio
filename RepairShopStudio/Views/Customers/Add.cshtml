@model CustomerAddViewModel

@{
    ViewBag.Title = "Add new part to the storage";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Customer's namee</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone number</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label">E-mail</label>
                <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.IsCorporate" class="form-label">Is client corporate</label>
                <input asp-for="@Model.IsCorporate" class="form-control" value="" />
                <span asp-validation-for="IsCorporate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address.AddressText" class="form-label">Address text</label>
                <input asp-for="@Model.Address.AddressText" class="form-control" value="" />
                <span asp-validation-for="Address.AddressText" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address.TownName" class="form-label">Town name</label>
                <input asp-for="@Model.Address.TownName" class="form-control" value="" />
                <span asp-validation-for="Address.TownName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address.ZipCode" class="form-label">ZIP</label>
                <input asp-for="@Model.Address.ZipCode" class="form-control" value="" />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>
            @*<div class="mb-3">
                <label asp-for="@Model.PriceBuy" class="form-label">Price to buy from supplier</label>
                <input asp-for="@Model.PriceBuy" class="form-control" value="" />
                <span asp-validation-for="PriceBuy" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.VehicleComponentId" class="form-label">Vehicle component</label>
                <select asp-for="@Model.VehicleComponentId" class="form-control">
                    @foreach (var component in Model.VehicleComponents)
                    {
                        <option value="@component.Id">@component.Name</option>
                    }
                </select>
                <span asp-validation-for="VehicleComponentId" class="text-danger"></span>
            </div>*@
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add part" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}